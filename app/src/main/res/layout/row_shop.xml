<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="#F7000000">

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="11dp"
        android:layout_marginTop="20dp"
        android:text="Name"
        android:textColor="#B3AEAE" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="20dp"
        android:text="Price"
        android:textColor="#B3AEAE" />

    <TextView
        android:id="@+id/setTextName"
        android:layout_width="161dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="79dp"
        android:layout_toEndOf="@+id/name"
        android:text="setTextName"
        android:textColor="#FFFFFF" />

    <TextView
        android:id="@+id/setTextPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="31dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/price"
        android:text="setTextPrice"
        android:textColor="#FFFFFF" />

    <ImageView
        android:id="@+id/itemPicture"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_marginStart="13dp"
        android:layout_marginRight="9dp"
        android:layout_toEndOf="@+id/setTextName" />

</RelativeLayout>